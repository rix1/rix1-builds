{
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/react@18.2.0",
    "types": ["lume/types.ts"]
  },
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.0.2/"
  }
}
